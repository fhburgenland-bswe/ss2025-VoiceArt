<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fh.burgenland.treasurehunt.TreasureHuntController">
  <top>
    <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
      </padding>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Treasure Hunt" />
      <fx:include fx:id="inputControlsPane" source="input_controls.fxml" />
      <Label fx:id="statusLabel" text="Use your voice to find the hidden treasure!" />
    </VBox>
  </top>
  <center>
    <Canvas fx:id="gameCanvas" height="418.0" width="747.0" BorderPane.alignment="CENTER" />
  </center>
  <bottom>
    <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
      <padding>
        <Insets bottom="20" left="10" right="10" top="10" />
      </padding>
      <Button fx:id="startButton" onAction="#handleStartGame" text="Start Game" />
      <Button fx:id="stopButton" disable="true" onAction="#handleStopGame" text="Stop Voice Input" />
      <Button fx:id="backButton" onAction="#handleBackButton" text="Back to Games" />
    </HBox>
  </bottom>
</BorderPane>
