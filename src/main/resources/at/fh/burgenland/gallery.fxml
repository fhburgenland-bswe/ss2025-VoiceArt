      <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20 20 20 20;" BorderPane.alignment="CENTER">
         <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" styleClass="btn, btn-danger" text="ZurÃ¼ck zur Spielauswahl" />

