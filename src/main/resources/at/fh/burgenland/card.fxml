<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.fh.burgenland.card.CardController"
      prefWidth="250"
      prefHeight="150"
      maxWidth="250"
      maxHeight="150"
      minWidth="250"
      minHeight="150"
      spacing="10"
      onMouseClicked="#handleCardClick"
      style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;">

<Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
<Label fx:id="descriptionLabel" wrapText="true"/>

</VBox>